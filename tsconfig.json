{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "lib": [ "es6", "dom" ],
      "moduleResolution": "node",
      "rootDir": "./",
      "sourceMap": true,
      "allowJs": false,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "noImplicitReturns": true,
      "preserveConstEnums": true,
      "suppressImplicitAnyIndexErrors": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": ".build",
      "jsx": "react",
      "jsxFactory": "h"
    },
    "exclude": [ "node_modules" ],
    "types": [ "typePatches" ]
  }
